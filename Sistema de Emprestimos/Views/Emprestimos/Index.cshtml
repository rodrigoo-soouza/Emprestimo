@model IEnumerable<Sistema_de_Emprestimos.Models.Emprestimo>

@{
    ViewData["Title"] = "Empréstimos";
}

<h1>Empréstimos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-file-earmark-plus mx-2"></i>Cadastrar Novo Empréstimo</a>
</p>

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-light" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}

<table id="Emprestimos" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Aluno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Funcionario)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.LivroEmprestado)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.DataUltimaAtualizacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Aluno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Funcionario)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.LivroEmprestado)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.DataUltimaAtualizacao)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="bi bi-journals mx-2"></i>Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning"><i class="bi bi-journal-bookmark mx-2"></i>Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-trash mx-2"></i>Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
